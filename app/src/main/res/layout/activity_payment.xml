<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#007BFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@android:color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topHeaderBar"
        app:layout_constraintBottom_toTopOf="@id/continuePaymentButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <View
                android:id="@+id/propertyImagePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#E0E0E0"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/propertyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Resident House 4"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/propertyImagePlaceholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/propertyPricePerDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rp 2.300.000 / day"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/propertyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status: Selected dates are available"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/propertyPricePerDay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Full Name"
                android:paddingStart="16dp"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/startDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/fullNameEditText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/endDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toEndOf="@id/startDateLabel"
                app:layout_constraintTop_toTopOf="@id/startDateLabel" />

            <TextView
                android:id="@+id/startDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue, Oct 24"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/startDateLabel"
                app:layout_constraintTop_toBottomOf="@id/startDateLabel"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/endDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed, Oct 25"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/endDateLabel"
                app:layout_constraintTop_toBottomOf="@id/endDateLabel"
                android:layout_marginTop="4dp" />

            <View
                android:id="@+id/priceDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/startDateValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/totalPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/priceDivider"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/totalPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 6.900.000"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/priceDivider"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tipeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/totalPriceValue"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tipeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residential"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tipeLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ukuranLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tipeValue"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ukuranValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 m\u00B2"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/ukuranLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/kamarTidurLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamar Tidur"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ukuranValue"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/kamarTidurValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/kamarTidurLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/kamarMandiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamar Mandi"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/kamarTidurValue"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/kamarMandiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/kamarMandiLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/deskripsiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/kamarMandiValue"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/deskripsiValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Beautiful house with a stunning view."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/deskripsiLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/continuePaymentButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue to Payment"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>